<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white"
    android:padding="8dp">

    <TextView
        android:id="@+id/item_ble_lz_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备名称：XC-LINK-8BA49FFA"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_ble_lz_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC:8B:A4:9F:FA"
        app:layout_constraintLeft_toLeftOf="@id/item_ble_lz_name"
        app:layout_constraintTop_toBottomOf="@id/item_ble_lz_name" />

    <TextView
        android:id="@+id/item_ble_lz_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信号强度RSSI:-78"
        app:layout_constraintLeft_toLeftOf="@id/item_ble_lz_id"
        app:layout_constraintTop_toBottomOf="@id/item_ble_lz_id" />

    <Button
        android:id="@+id/item_ble_lz_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>